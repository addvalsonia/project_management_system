
<div class="organization_projects" >
	<div align="right">
		<%= link_to_remote "+ New Project", :url => new_organization_project_path(@organization.id), :method => :get %>
	</div>
	<h3 style="text-align: center">Projects in <%= @organization.org_name%></h3>
	<table cellpadding="3" cellspacing="3" width="50%" >
		
		<% if @projects.size > 0 %>
			<tr align="left">
				<th>Project Name</th>
				<th>Description</th>
			</tr>
			<% @projects.each do |p| %>
				<tr align="left">
					<td><%= p.project_name%> </td>
					<td><%= p.desc%></td>
					<td><%= link_to_remote "EDIT",:url => edit_organization_project_path(@organization.id,p), :method => :get %></td>
					<td><%= link_to_remote "DELETE", :update => "projects", :url =>  organization_project_path(@organization.id,p.id),:method => 'delete', :confirm => "Are you sure?" %></td>
				
				</tr>
				
			<% end %>
		<% else %>
			<tr><h3>No Project</h3></tr>
		<% end %>
	</table>
	<div id="generic_project"></div>
	
</div>
